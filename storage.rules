rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files in the meditations folder
    match /meditations/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;  // Only allow writes if authenticated
    }
    
    // Default rule - deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
